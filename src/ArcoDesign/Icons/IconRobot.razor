@namespace ArcoDesign.Components

@inherits ArcoDesignComponentBase

<svg  class="@classNameBuilder.Build()" width="48" height="48" viewBox="0 0 48 48" fill="none" xmlns="http://www.w3.org/2000/svg" stroke="currentColor" stroke-width="4">
<path d="M18 26H19V27H18V26Z" fill="currentColor" stroke="none" stroke-width="none" stroke-linecap="butt"></path>
<path d="M29 26H30V27H29V26Z" fill="currentColor" stroke="none" stroke-width="none" stroke-linecap="butt"></path>
<path d="M24 7V13M24 7H29M24 7H19M3 21V32M39 40H9V13H39V42M45 21V32M18 26H19V27H18V26ZM29 26H30V27H29V26Z" stroke-linecap="butt"></path>
</svg>

@code {
    private readonly string prefixCls = "arco";

    [Parameter]
    public bool Spin { get; set; } = false;

    public string DisplayName = "IconRobot";

    protected override Task OnInitializedAsync()
    {
        classNameBuilder
            .Add(ClassName)
            .AddIf(!Spin, $"{prefixCls}-icon")
            .AddIf(!Spin, $"{prefixCls}-icon-robot")
            .AddIf(Spin, $"{prefixCls}-icon-loading");

        return base.OnInitializedAsync();
    }
}
