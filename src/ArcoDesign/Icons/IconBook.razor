@namespace ArcoDesign.Components

@inherits ArcoDesignComponentBase

<svg  class="@classNameBuilder.Build()" width="48" height="48" viewBox="0 0 48 48" fill="none" xmlns="http://www.w3.org/2000/svg" stroke="currentColor" stroke-width="4">
<path d="M24 13L7 7V35L24 41L41 35V7L24 13ZM24 13V40.5M29 18L36 15.5M29 25L36 22.5M29 32L36 29.5M19 18L12 15.5M19 25L12 22.5M19 32L12 29.5" stroke-linejoin="round" stroke-linecap="butt"></path>
</svg>

@code {
    private readonly string prefixCls = "arco";

    [Parameter]
    public bool Spin { get; set; } = false;

    public string DisplayName = "IconBook";

    protected override Task OnInitializedAsync()
    {
        classNameBuilder
            .Add(ClassName)
            .AddIf(!Spin, $"{prefixCls}-icon")
            .AddIf(!Spin, $"{prefixCls}-icon-book")
            .AddIf(Spin, $"{prefixCls}-icon-loading");

        return base.OnInitializedAsync();
    }
}
