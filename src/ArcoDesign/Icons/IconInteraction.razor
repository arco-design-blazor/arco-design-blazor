@namespace ArcoDesign.Components

@inherits ArcoDesignComponentBase

<svg  class="@classNameBuilder.Build()" width="48" height="48" viewBox="0 0 48 48" fill="none" xmlns="http://www.w3.org/2000/svg" stroke="currentColor" stroke-width="4">
<path d="M8 19H24M40 19H24M24 19V42M38 42H10C8.89543 42 8 41.1046 8 40V8C8 6.89543 8.89543 6 10 6H38C39.1046 6 40 6.89543 40 8V40C40 41.1046 39.1046 42 38 42Z" stroke-linecap="butt"></path>
