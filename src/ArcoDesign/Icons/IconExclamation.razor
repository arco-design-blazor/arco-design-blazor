@namespace ArcoDesign.Components

@inherits ArcoDesignComponentBase

<svg  class="@classNameBuilder.Build()" width="48" height="48" viewBox="0 0 48 48" fill="none" xmlns="http://www.w3.org/2000/svg" stroke="currentColor" stroke-width="4">
<rect x="23" y="9" width="2" height="21" stroke-linecap="butt"></rect>
<rect x="23" y="9" width="2" height="21" fill="currentColor" stroke="none" stroke-width="none" stroke-linecap="butt"></rect>
<rect x="23" y="37" width="2" height="2" stroke-linecap="butt"></rect>
<rect x="23" y="37" width="2" height="2" fill="currentColor" stroke="none" stroke-width="none" stroke-linecap="butt"></rect>
</svg>

@code {
    private readonly string prefixCls = "arco";

    [Parameter]
    public bool Spin { get; set; } = false;

    public string DisplayName = "IconExclamation";

    protected override Task OnInitializedAsync()
    {
        classNameBuilder
            .Add(ClassName)
            .AddIf(!Spin, $"{prefixCls}-icon")
            .AddIf(!Spin, $"{prefixCls}-icon-exclamation")
            .AddIf(Spin, $"{prefixCls}-icon-loading");

        return base.OnInitializedAsync();
    }
}
