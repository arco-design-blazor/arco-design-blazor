@namespace ArcoDesign.Components

@inherits ArcoDesignComponentBase

<svg  class="@classNames" width="48" height="48" viewBox="0 0 48 48" fill="none" xmlns="http://www.w3.org/2000/svg" stroke="currentColor" stroke-width="4">
<rect x="14" y="12" width="4" height="24" stroke-linecap="butt"></rect>
<rect x="30" y="12" width="4" height="24" stroke-linecap="butt"></rect>
<rect x="14" y="12" width="4" height="24" fill="currentColor" stroke="none" stroke-width="none" stroke-linecap="butt"></rect>
<rect x="30" y="12" width="4" height="24" fill="currentColor" stroke="none" stroke-width="none" stroke-linecap="butt"></rect>
</svg>

@code {
    private readonly string prefixCls = "arco";

    [Parameter]
    public bool Spin { get; set; } = false;

    public string DisplayName = "IconPause";

    protected override void SetComponentCss(ClassNameBuilder classNameBuilder, StyleBuilder styleBuilder, AttributeBuilder attributeBuilder)
    {
        classNameBuilder
            .Add(ClassName)
            .AddIf(!Spin, $"{prefixCls}-icon")
            .AddIf(!Spin, $"{prefixCls}-icon-pause")
            .AddIf(Spin, $"{prefixCls}-icon-loading");

        base.SetComponentCss(classNameBuilder, styleBuilder, attributeBuilder);
    }
}
